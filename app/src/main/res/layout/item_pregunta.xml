<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VistaItemPregunta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Icono materia -->
        <ImageView
            android:id="@+id/imgItemAsignatura"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher">
        </ImageView>
        <!-- Contenido pregunta -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <!-- Campo asignatura -->
            <TextView
                android:id="@+id/txtItemAsignatura"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Asignatura"
                android:textStyle="bold">
            </TextView>
            <!-- Campo enunciado -->
            <TextView
                android:id="@+id/txtItemEnunciado"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Enunciado pregunta">
            </TextView>
            <!-- Campo autor -->
            <TextView
                android:id="@+id/txtItemAutor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Autor"
                android:textStyle="italic">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>